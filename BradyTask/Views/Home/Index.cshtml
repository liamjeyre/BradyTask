@model BradyTask.Models.Home.WeatherSearchQuery;

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-10 offset-1">
        <form id="LocationWeather" method="post">
            <h4>Please enter a location to see it&#39;s weather data</h4>
            <hr />
            <div class="col-md-5">
                <div class="form-group">
                    <label asp-for="@Model.Location"></label>
                    <input asp-for="@Model.Location" class="form-control" />
                    <span asp-validation-for="@Model.Location" class="text-danger"></span>
                    <p class="text-danger">@ViewBag.ErrorMessage</p>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
    </div>
</div>
<div class="row">
    @if (TempData["WeatherForecast"] != null)
    {
        <h4>
            Forecast for @ViewBag.Location
        </h4>
        <partial name="Partials/_ForecastTable" model="@TempData["WeatherForecast"]"/>
    }
</div>
